<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    tools:context=".registration.view.RegistrationActivity">

    <TextView
        android:id="@+id/title"
        style="@style/TextAppearance.AppCompat.Large"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:padding="8dp"
        android:text="@string/terminal_registration"
        android:textAlignment="center"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/terminal_type_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/vendor_terminal_type"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@+id/title" />

    <EditText
        android:id="@+id/et_terminal_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:enabled="false"
        android:text="11"
        android:textAlignment="center"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@+id/terminal_type_label" />


    <TextView
        android:id="@+id/terminal_2_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/terminal_serial_id"
        app:layout_constraintTop_toBottomOf="@+id/et_terminal_type" />

    <EditText
        android:id="@+id/et_trsmid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:digits="0123456789ABCDEFabcdef"
        android:hint="TRSMID"
        android:maxLength="6"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@+id/terminal_2_label" />

    <TextView
        android:id="@+id/terminal_3_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/vendor_key_index"
        app:layout_constraintBottom_toBottomOf="@id/vendor_sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_trsmid" />

    <Spinner
        android:id="@+id/vendor_sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:entries="@array/key_indicies"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/terminal_3_label"
        app:layout_constraintTop_toBottomOf="@+id/et_trsmid" />

    <TextView
        android:id="@+id/terminal_4_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/sama_key_index"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/terminal_3_label" />

    <Spinner
        android:id="@+id/sama_sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:entries="@array/key_indicies"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/terminal_4_label"
        app:layout_constraintTop_toBottomOf="@+id/vendor_sp" />

    <TextView
        android:id="@+id/random_length_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/random_length"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@+id/sama_sp" />

    <EditText
        android:id="@+id/et_random_length"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:digits="1234567890"
        android:hint="TRSMID"
        android:inputType="number"
        android:maxLength="6"
        android:text="16"
        android:textAlignment="center"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@+id/random_length_label" />

    <Button
        android:id="@+id/btn_connection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:padding="8dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:text="Connection Settings"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_random_length" />

    <Button
        android:id="@+id/btn_proceed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:padding="8dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:text="@string/proceed"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_connection" />

</androidx.constraintlayout.widget.ConstraintLayout>